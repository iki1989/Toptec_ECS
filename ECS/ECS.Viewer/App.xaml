<Application x:Class="ECS.Viewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ECS.Viewer"
             xmlns:vm="clr-namespace:ECS.Core.ViewModels.Viewer;assembly=ECS.Core"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!--viewmodel-->
            <vm:OrderSearchViewModel x:Key="ViewModel.OrderSearch"/>
            <vm:WeightRejectViewModel x:Key="ViewModel.WeightReject"/>
            <vm:InvoiceRejectViewModel x:Key="ViewModel.InvoiceReject"/>
            <vm:SmartPackingRejectViewModel x:Key="ViewModel.SmartPackingReject"/>
            <vm:OutManageViewModel x:Key="ViewModel.OutManage"/>
            <vm:TrackingSearchViewModel x:Key="ViewModel.Tracking"/>
            <vm:TrackingLogSearchViewModel x:Key="ViewModel.TrackingLog"/>
            <vm:CountingViewModel x:Key="ViewModel.Counting"/>
            <!--converter-->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <!--image-->
            <ImageSource x:Key="Image.LedOn">
                /Images/LedOn.ico
            </ImageSource>
            <ImageSource x:Key="Image.LedOff">
                /Images/LedOff.png
            </ImageSource>
            <!--brush-->
            <SolidColorBrush x:Key="Brush.CjBlue" Color="#FF007DC3"/>
            <SolidColorBrush x:Key="Brush.CjRed" Color="#FFE31B23"/>
            <SolidColorBrush x:Key="Brush.CjYellow" Color="#FFF8971D"/>
            <SolidColorBrush x:Key="Brush.DarkGray" Color="#FF77787B"/>
            <SolidColorBrush x:Key="Brush.MediumGray" Color="#FF939598"/>
            <SolidColorBrush x:Key="Brush.LightGray" Color="#FFBEC0C2"/>
            <SolidColorBrush x:Key="Brush.White" Color="#FFFAFAF9"/>
            <SolidColorBrush x:Key="Brush.Black" Color="#FF060606"/>
            <SolidColorBrush x:Key="Brush.YellowGreen" Color="#FFA2E35D"/>
            <!--font-->
            <FontFamily x:Key="Font.Common">
                /ECS.Viewer;component/Font/#Noto Sans CJK KR Black
            </FontFamily>
            <!--style-->
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource Font.Common}"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="FontFamily" Value="{StaticResource Font.Common}"/>
            </Style>
            <Style x:Key="Style.TextBlock.Font" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="/ECS.Touch;component/Font/#Noto Sans CJK KR Black"/>
            </Style>
            <Style x:Key="Style.TextBox.NoneBorder" TargetType="TextBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TextBoxBase}">
                            <Border Name="Border" Background="{x:Null}" BorderBrush="#FFBEC0C2" BorderThickness="0,0,0,2">
                                <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="Style.TabItem.CustomHead" TargetType="TabItem">
                <Setter Property="Width" Value="140"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="FontFamily" Value="{StaticResource Font.Common}"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,2,20,-2"/>
                <Setter Property="Foreground" Value="{StaticResource Brush.DarkGray}"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border>
                                <Grid>
                                    <Grid>
                                        <Border x:Name="border"
                                            BorderBrush="{x:Null}"
                                            BorderThickness="0">
                                            <Border.Background>
                                                <ImageBrush ImageSource="/Images/tab_underline.png"/>
                                            </Border.Background>
                                        </Border>
                                    </Grid>
                                    <ContentPresenter ContentSource="Header" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"  />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" >
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/tab_over.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="border" Property="Background" >
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/tab_on.png"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground" Value="{StaticResource Brush.CjBlue}"></Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style  x:Key="Style.DataGridColumnHeader.Center" TargetType="DataGridColumnHeader">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>
            <Style x:Key="Style.DataGridCell.Center" TargetType="DataGridCell">
                <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            </Style>
            <Style x:Key="Style.DataGrid.Common" TargetType="DataGrid">
                <Setter Property="ColumnHeaderStyle" Value="{StaticResource Style.DataGridColumnHeader.Center}"/>
                <Setter Property="CellStyle" Value="{StaticResource Style.DataGridCell.Center}"/>
                <Setter Property="FontFamily" Value="{StaticResource Font.Common}"/>
                <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>
                <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Setter Property="CanUserResizeColumns" Value="False"/>
                <Setter Property="CanUserReorderColumns" Value="False"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="SelectionMode" Value="Extended"/>
                <Setter Property="SelectionUnit" Value="Cell"/>
                <Setter Property="EnableColumnVirtualization" Value="True"/>
                <Setter Property="EnableRowVirtualization" Value="True"/>
                <Setter Property="MaxWidth" Value="2560"/>
                <Setter Property="MaxHeight" Value="1600"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="CanUserSortColumns" Value="False"/>
                <Setter Property="ScrollViewer.CanContentScroll" Value="False"/>
            </Style>

            <Style x:Key="Style.Button.Up" TargetType="Button">
                <Setter Property="Width" Value="40"/>
                <Setter Property="Height" Value="100"/>
                <Setter Property="BorderBrush" Value="{x:Null}"/>
                <Setter Property="Background">
                    <Setter.Value>
                        <ImageBrush ImageSource="/Images/btn_up_b.png" Stretch="None"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="Style.Button.Down" TargetType="Button" BasedOn="{StaticResource Style.Button.Up}">
                <Setter Property="Background">
                    <Setter.Value>
                        <ImageBrush ImageSource="/Images/btn_down_b.png" Stretch="None"/>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="Style.Button.Common" TargetType="Button">
                <Setter Property="Background">
                    <Setter.Value>
                        <ImageBrush ImageSource="/Images/btn_line_normal_01.png"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" BorderBrush="{x:Null}" BorderThickness="1" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/btn_line_normal_01_over.png"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush/>
                                        </Setter.Value>
                                    </Setter>
                                    <!--비활성화시 텍스트 색상-->
                                    <Setter Property="Foreground" Value="gray"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="Style.Button.InfoBox" TargetType="Button">
                <Setter Property="Background">
                    <Setter.Value>
                        <ImageBrush ImageSource="/Images/infobox.png"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" BorderBrush="{x:Null}" BorderThickness="1" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/over.png" Stretch="Fill"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="Style.Button.Refresh" TargetType="Button">
                <Setter Property="Background">
                    <Setter.Value>
                        <ImageBrush ImageSource="/Images/btn_search_40x40.png"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" BorderBrush="{StaticResource Brush.CjBlue}" BorderThickness="1" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/Images/btn_search_40x40.png" Stretch="Uniform"/>
                                        </Setter.Value>
