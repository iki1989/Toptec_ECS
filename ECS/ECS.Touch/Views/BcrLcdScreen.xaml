                                <Button Style="{StaticResource Style.Button.Up}" Margin="10" Click="OutBcrUpClick"/>
                                <Button Style="{StaticResource Style.Button.Down}" Margin="10" Click="OutBcrDownClick"/>
                                <Button Style="{StaticResource Style.Button.Bottom}" Margin="10" Click="OutBcrBottomClick"/>
