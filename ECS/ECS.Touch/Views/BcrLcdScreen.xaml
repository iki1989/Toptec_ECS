                                                    <DataTrigger Binding="{Binding Verification}" Value="미스매치">
                                                        <Setter TargetName="image" Property="Source" Value="/Images/LedOff.png"/>
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="중복발행" Width="250">
