                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="조회"  Binding="{Binding Queried}"  Width="194"/>
                                    <DataGridTextColumn Header="박스ID" Binding="{Binding BoxId}"  Width="400"/>
                                    <DataGridTextColumn Header="송장번호" Binding="{Binding InvoiceId}" Width="500"/>
                                    <DataGridTextColumn Header="출고 일시" Binding="{Binding CreatedAt , StringFormat=yyyy-MM-dd HH:mm:ss}" Width="720"/>
                                </DataGrid.Columns>
                            </DataGrid>
