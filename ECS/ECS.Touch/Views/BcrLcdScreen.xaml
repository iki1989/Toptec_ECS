                                            <DataTrigger Binding="{Binding Verification}" Value="정상">
                                                <Setter Property="Background" Value="{x:Null}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="박스ID" Binding="{Binding BoxId}"  Width="300"/>
