<Page x:Class="ECS.Touch.Views.CaseErectScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ECS.Touch.Views"
      xmlns:vm="clr-namespace:ECS.Core.ViewModels.Touch;assembly=ECS.Core"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="CaseErectScreen">
    <Page.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource Style.TextBlock.Font}"/>
        <Style TargetType="TabItem" BasedOn="{StaticResource Style.TabItem.CustomHead}"/>
        <Style TargetType="DatePickerTextBox">
            <Setter Property="IsReadOnly" Value="True"/>
        </Style>
        <Style x:Key="Stype.DatePicker.Calender" TargetType="Calendar">
        </Style>
    </Page.Resources>
    <Page.DataContext>
        <vm:CaseErectViewModel x:Name="ViewModel"/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Images/MainBackground1.png"/>
            </Grid.Background>
            <Viewbox HorizontalAlignment="Left"/>
            <Viewbox HorizontalAlignment="Right"/>
        </Grid>
        <!--menu-->
        <TabControl Grid.RowSpan="2" Margin="0,0,0,0" BorderBrush="{StaticResource Brush.LightGray}" BorderThickness="0" Background="{StaticResource Brush.White}" SelectionChanged="TabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="LineHeight" Value="{Binding FontSize,RelativeSource={RelativeSource Self}}"/>
                    <Setter Property="TextAlignment" Value="Center"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                    <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
                    <Setter Property="Padding" Value="5,0,5,0"/>
                </Style>
            </TabControl.Resources>
            <TabItem Width="140" Margin="0" BorderBrush="{x:Null}" Height="68">
                <TabItem.Header>
                    <TextBlock FontSize="20"><Run Text="투입"/></TextBlock>
                </TabItem.Header>
                <Grid Height="996" Width="1920">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0">
                            <StackPanel Orientation="Horizontal" Margin="10 5">
                                <Border BorderThickness="0" BorderBrush="Black" Width="600" HorizontalAlignment="Left">
                                    <TextBlock FontSize="50" Margin="0" TextDecorations="{x:Null}" Padding="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="600">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="Text" Value="검증 실패"/>
                                                <Setter Property="Background" Value="{StaticResource Brush.CjRed}"/>
                                                <Setter Property="Foreground" Value="{StaticResource Brush.Black}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RecentErectData1.Verification}" Value="OK">
                                                        <Setter Property="Text" Value="검증 성공"/>
                                                        <Setter Property="TextBlock.Background" Value="{StaticResource Brush.YellowGreen}"/>
                                                        <Setter Property="Foreground" Value="{StaticResource Brush.Black}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                                <!--<ToggleButton Margin="70,0,0,0" Style="{StaticResource Style.ToggleButton.Common}" VerticalAlignment="Center" Height="70">
                                    <TextBlock  FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="잉크 부족 무시" Margin="3" Width="200"/>
                                </ToggleButton>-->
                                <CheckBox IsChecked="{Binding IgnoreInkLeak1}" Margin="40,-5,0,0" VerticalAlignment="Center" Width="16" BorderBrush="#FF007DC3">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="3"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                                <TextBlock  FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="잉크 부족 무시" Margin="3" Width="200"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 5">
                                <TextBlock Text="박스 호수" FontSize="30" VerticalAlignment="Center" Width="170" TextAlignment="Left" Foreground="Black"/>
                                <Border BorderBrush="{x:Null}" Width="430" >
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding RecentErectData1.BoxType}" FontSize="40"  TextAlignment="Center"/>
                                        <TextBlock Text=" / " FontSize="40"  TextAlignment="Center"/>
                                        <TextBlock Text="{Binding RecentErectData1.BoxName}" FontSize="40"  TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border Margin="70,0,0,0" BorderThickness="2" VerticalAlignment="Center" Width="200" Height="70">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
                                        <TextBlock FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding InkRatio1}"/>
                                        <TextBlock FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="%"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 5">
                                <TextBlock Text="박스 ID" FontSize="30" VerticalAlignment="Center" Width="170" TextAlignment="Left" Foreground="Black"/>
                                <TextBlock Text="{Binding RecentErectData1.BoxId}" FontSize="40" VerticalAlignment="Center" Width="430" TextAlignment="Center"/>
                                <Button Style="{StaticResource Style.Button.Common}" Click="Resume1Click" Height="70" Margin="70,0,0,0" VerticalAlignment="Center">
                                    <TextBlock  FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="재가동" Margin="3" Width="200"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <Border Margin="10" Grid.Row="1" BorderThickness="2" BorderBrush="{StaticResource Brush.LightGray}">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="20,0,0,0"  Width="916">
                                    <TextBlock Text="투입1" FontSize="30
                                               " VerticalAlignment="Bottom" Foreground="{StaticResource Brush.CjBlue}"/>
                                    <Button Style="{StaticResource Style.Button.Refresh}" Margin="783 10 0 10" Width="40" Height="40" BorderBrush="{StaticResource Brush.CjBlue}"/>
                                </StackPanel>
                                <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <Button Style="{StaticResource Style.Button.Top}" Click="CaseErect1TopClick" Margin="10"/>
                                    <Button Style="{StaticResource Style.Button.Up}" Click="CaseErect1UpClick" Margin="10"/>
                                    <Button Style="{StaticResource Style.Button.Down}" Click="CaseErect1DownClick" Margin="10"/>
                                    <Button Style="{StaticResource Style.Button.Bottom}" Click="CaseErect1BottomClick" Margin="10"/>
                                </StackPanel>
                                <DataGrid Style="{StaticResource Style.DataGrid.Common}" FontSize="28" Margin="20,14,0,20" ItemsSource="{Binding CaseErectList1}">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="{StaticResource Brush.CjYellow}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Verification}" Value="OK">
                                                    <Setter Property="Background" Value="{x:Null}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="박스타입" Binding="{Binding BoxType}" Width="150"/>
                                        <DataGridTextColumn Header="박스ID" Binding="{Binding BoxId}"  Width="200"/>
                                        <DataGridTextColumn Header="투입 일시" Binding="{Binding ErectedAt, StringFormat=yy-MM-dd HH:mm:ss}" Width="354"/>
                                        <DataGridTemplateColumn Header="검증결과" Width="150">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image x:Name="image" Width="33"/>
                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding Verification}" Value="NOREAD">
                                                            <Setter TargetName="image" Property="Source" Value="/Images/LedOff.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Verification}" Value="DUPLICATE">
                                                            <Setter TargetName="image" Property="Source" Value="/Images/LedOff.png"/>
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0">
                            <StackPanel Orientation="Horizontal" Margin="10 5">
                                <Border BorderThickness="0" BorderBrush="Black" Width="600" HorizontalAlignment="Left">
                                    <TextBlock FontSize="50" Margin="0" TextDecorations="{x:Null}" Padding="0,10,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="600">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Center"/>
                                                <Setter Property="Text" Value="검증 실패"/>
                                                <Setter Property="Background" Value="{StaticResource Brush.CjRed}"/>
                                                <Setter Property="Foreground" Value="{StaticResource Brush.Black}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RecentErectData2.Verification}" Value="OK">
                                                        <Setter Property="Text" Value="검증 성공"/>
                                                        <Setter Property="TextBlock.Background" Value="{StaticResource Brush.YellowGreen}"/>
                                                        <Setter Property="Foreground" Value="{StaticResource Brush.Black}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                                <!--<ToggleButton Style="{StaticResource Style.ToggleButton.Common}" Margin="35,0,0,0" VerticalAlignment="Center" Height="70">
                                    <TextBlock  FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="잉크 부족 무시" Margin="3" Width="200"/>
                                </ToggleButton>-->
                                <CheckBox IsChecked="{Binding IgnoreInkLeak2}" Margin="12,-5,0,0" VerticalAlignment="Center" Width="16" BorderBrush="#FF007DC3">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="3"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                                <TextBlock  FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="잉크 부족 무시" Margin="3" Width="190"/>

                                <Button Click="NumberingPopupOpenClick" Style="{StaticResource Style.Button.PopupBtn}" Margin="5,0,25,0" Width="70" Height="70" BorderBrush="{x:Null}" BorderThickness="0">
                                    <Button.Background>
                                        <ImageBrush ImageSource="/Images/btn_line_70x70.png" Stretch="Uniform"/>
                                    </Button.Background>
                                    <TextBlock  FontSize="50" TextAlignment="Center" VerticalAlignment="Center" Text="※" Width="67" Height="40" Foreground="#FF007DC3"/>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 5">
                                <TextBlock Text="박스 호수" FontSize="30" VerticalAlignment="Center" Width="170" TextAlignment="Left" Foreground="Black"/>
                                <Border BorderBrush="{x:Null}" Width="430" >
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding RecentErectData2.BoxType}" FontSize="40"  TextAlignment="Center"/>
                                        <TextBlock Text=" / " FontSize="40"  TextAlignment="Center"/>
                                        <TextBlock Text="{Binding RecentErectData2.BoxName}" FontSize="40"  TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                <Border Margin="35,0,0,0" BorderThickness="2" VerticalAlignment="Center" Height="70" Width="200">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
                                        <TextBlock FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="{Binding InkRatio2}"/>
                                        <TextBlock FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="%"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="10 5">
                                <TextBlock Text="박스 ID" FontSize="30" VerticalAlignment="Center" Width="170" TextAlignment="Left" Foreground="Black"/>
                                <TextBlock Text="{Binding RecentErectData2.BoxId}" FontSize="40" VerticalAlignment="Center" Width="430" TextAlignment="Center"/>
                                <Button Style="{StaticResource Style.Button.Common}" Click="Resume2Click" Margin="35,0,0,0" VerticalAlignment="Center" Height="70">
                                    <TextBlock  FontSize="30" TextAlignment="Center" VerticalAlignment="Center" Text="재가동" Margin="3" Width="200"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                        <Border Margin="10" Grid.Row="1" Grid.Column="1" BorderThickness="2" BorderBrush="{StaticResource Brush.LightGray}">
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="20,0,0,0"  Width="916">
                                    <TextBlock Text="투입2" FontSize="30
                                               " VerticalAlignment="Bottom" Foreground="{StaticResource Brush.CjBlue}"/>
                                    <Button Style="{StaticResource Style.Button.Refresh}" Margin="783 10 0 10" Width="40" Height="40"/>
                                </StackPanel>
                                <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <Button Style="{StaticResource Style.Button.Top}" Click="CaseErect2TopClick" Margin="10"/>
                                    <Button Style="{StaticResource Style.Button.Up}" Click="CaseErect2UpClick" Margin="10"/>
                                    <Button Style="{StaticResource Style.Button.Down}" Click="CaseErect2DownClick" Margin="10"/>
                                    <Button Style="{StaticResource Style.Button.Bottom}" Click="CaseErect2BottomClick" Margin="10"/>
                                </StackPanel>
                                <DataGrid Style="{StaticResource Style.DataGrid.Common}" FontSize="28" Margin="20,14,0,20" ItemsSource="{Binding CaseErectList2}">
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="{StaticResource Brush.CjYellow}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Verification}" Value="OK">
                                                    <Setter Property="Background" Value="{x:Null}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="박스타입" Binding="{Binding BoxType}" Width="150"/>
                                        <DataGridTextColumn Header="박스ID" Binding="{Binding BoxId}"  Width="200"/>
                                        <DataGridTextColumn Header="투입 일시" Binding="{Binding ErectedAt, StringFormat=yy-MM-dd HH:mm:ss}" Width="354"/>
                                        <DataGridTemplateColumn Header="검증결과" Width="150">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Image x:Name="image" Width="35"/>
                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding Verification}" Value="NOREAD">
                                                            <Setter TargetName="image" Property="Source" Value="/Images/LedOff.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Verification}" Value="DUPLICATE">
                                                            <Setter TargetName="image" Property="Source" Value="/Images/LedOff.png"/>
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DockPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Width="140" Margin="0" BorderBrush="{x:Null}" Height="68">
                <TabItem.Header>
                    <TextBlock FontSize="20" HorizontalAlignment="Right"><Run Text="재발행"/></TextBlock>
                </TabItem.Header>
                <Grid Height="996" Width="1920">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="8*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.ColumnSpan="2">
                        <StackPanel Margin="10 0 10 0">
                            <TextBlock FontSize="20" TextAlignment="Left" Margin="-5,30,0,0" Foreground="{StaticResource Brush.DarkGray}" Height="25"><Run Text="생성"/><Run Text=" "/><Run Text="일시"/></TextBlock>
                            <StackPanel Orientation="Horizontal" Height="70">
                                <DatePicker Name="CaseErectBegin" SelectedDateChanged="CaseErectDateChanged" SelectedDate="{Binding SearchBegin}" FontSize="30" DisplayDate="2019-09-13" RenderTransformOrigin="0.5,1"  Style="{StaticResource DatePickerIconResizingStyle}" Width="342" Height="45" Margin="0,12">
                                    <DatePicker.Resources>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Viewbox>
                                                            <ContentPresenter/>
                                                        </Viewbox>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                                <TextBlock Text="~" FontSize="25" VerticalAlignment="Center"/>
                                <DatePicker Name="CaseErectEnd" SelectedDateChanged="CaseErectDateChanged" SelectedDate="{Binding SearchEnd}" FontSize="30" DisplayDate="2019-09-13" RenderTransformOrigin="0.5,1"  Style="{StaticResource DatePickerIconResizingStyle}" Width="342" Height="45" Margin="0,12">
                                    <DatePicker.Resources>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Viewbox>
                                                            <ContentPresenter/>
                                                        </Viewbox>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2" Height="70">
                            <ComboBox Name="CaseErectBoxType" Width="200" Margin="10,10,10,0" SelectedIndex="0" Text="{Binding SelectedBoxType}"  FontSize="30" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Height="50" ItemsSource="{Binding BoxTypeList}" SelectionChanged="CaseErectBoxType_SelectionChanged"/>
                            <TextBox CharacterCasing="Upper" x:Name="CaseErectCount" MaxLength="10" Text="{Binding BoxNumber}" Tag="박스 아이디"  Style="{StaticResource Style.WatermarkedTextBox}" FontSize="30" Width="281" TextAlignment="Center" Margin="10,10,10,0" Height="50" BorderBrush="{x:Null}" KeyDown="CaseErectCount_KeyDown" TextChanged="CaseErectCount_TextChanged">
                                <TextBox.Background>
                                    <ImageBrush ImageSource="/Images/tab_underline.png" Stretch="Uniform">
                                        <ImageBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                                <RotateTransform CenterY="0.5" CenterX="0.5"/>
                                                <TranslateTransform Y="0.3"/>
                                            </TransformGroup>
                                        </ImageBrush.RelativeTransform>
                                    </ImageBrush>
                                </TextBox.Background>
                            </TextBox>
                            <Button Style="{StaticResource Style.Button.Search}" Click="SearchClick"  Content="검색" FontSize="30" Width="200" Height="60" Margin="0,10,0,0" Foreground="Black"/>
                            <CheckBox IsChecked="{Binding DisplayReject}" Margin="20,10,0,0" VerticalAlignment="Center">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="3" ScaleY="3"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <TextBlock FontSize="20" Width="231" VerticalAlignment="Center" TextAlignment="Left" Text="미검증만 표시" Margin="10,29.5,10,10" Foreground="Black" HorizontalAlignment="Left" Height="30.5"/>
                            <StackPanel Orientation="Horizontal" Height="60">
                                <Button Style="{StaticResource Style.Button.Common}" Click="RefreshClick" Content="새로고침" FontSize="30" Width="200" Margin="10 0"/>
                                <Button Style="{StaticResource Style.Button.Common}" Click="OpenNewPrint" Content="신규 발행" FontSize="30" Width="200" Margin="10 0"/>
                                <Button Style="{StaticResource Style.Button.Common}" Click="ReprintClick" Content="재발행" FontSize="30" Width="200" Margin="10 0"/>
                                <Button Style="{StaticResource Style.Button.Common}" Click="ManualVerificationOpenClick" Content="수동 검증" FontSize="30" Width="200" Margin="10 0"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <Border Margin="10" Grid.Row="1" BorderThickness="2" BorderBrush="{DynamicResource Brush.LightGray}">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" HorizontalAlignment="Left">
                                <Button Style="{StaticResource Style.Button.Top}" Click="CaseErectSearchTopClick" Margin="10"/>
                                <Button Style="{StaticResource Style.Button.Up}" Click="CaseErectSearchUpClick" Margin="10"/>
                                <Button Style="{StaticResource Style.Button.Down}" Click="CaseErectSearchDownClick" Margin="10"/>
                                <Button Style="{StaticResource Style.Button.Bottom}" Click="CaseErectSearchBottomClick" Margin="10"/>
                            </StackPanel>
                            <DataGrid x:Name="SearchGrid" Style="{StaticResource Style.DataGrid.Common}" Margin="20,20,0,13" FontSize="43" ItemsSource="{Binding CaseErectSearchList}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="호기" Binding="{Binding ErectorType}" Width="300"/>
                                    <DataGridTextColumn Header="박스 ID" Binding="{Binding BoxId}"  Width="318"/>
                                    <DataGridTextColumn Header="박스 타입" Binding="{Binding BoxType}"  Width="200"/>
                                    <DataGridTextColumn Header="출고 일시" Binding="{Binding ErectedAt, StringFormat=yy-MM-dd HH:mm:ss}" Width="500"/>
                                    <DataGridTextColumn Header="인쇄 수량" Binding="{Binding PrintCount}" Width="200"/>
                                    <DataGridTemplateColumn Header="검증결과" Width="296">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image x:Name="image" Width="40" Source="{StaticResource Image.LedOn}" Stretch="Uniform"/>
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Verification}" Value="N">
                                                        <Setter TargetName="image" Property="Source" Value="/Images/LedOff.png"/>
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DockPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        <!--status-->
        <StackPanel  Orientation="Horizontal" Grid.Row="0" Height="50" VerticalAlignment="Bottom" Width="1638" HorizontalAlignment="Right">
            <StackPanel.Background>
                <ImageBrush ImageSource="/Images/tab_underline.png"/>
            </StackPanel.Background>
            <StackPanel Orientation="Horizontal" Width="auto" Margin="100,0,10,0" HorizontalAlignment="Right" >
                <TextBlock FontWeight="Bold" FontSize="20" Text="ECS" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <Image Width="20" Stretch="Uniform" Margin="5,5,5,13">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="{StaticResource Image.LedOn}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ServerConnection, ElementName=ViewModel}" Value="False">
                                    <Setter Property="Source" Value="{StaticResource Image.LedOff}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="auto" Margin="0,0,10,0" >
                <TextBlock FontWeight="Bold" FontSize="20" Text="제함기#1" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <Image Width="20" Stretch="Uniform" Margin="5,5,5,13">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="{StaticResource Image.LedOn}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Erector1Connection, ElementName=ViewModel}" Value="False">
                                    <Setter Property="Source" Value="{StaticResource Image.LedOff}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="auto" Margin="0,0,10,0" >
                <TextBlock FontWeight="Bold" FontSize="20" Text="제함기#2" VerticalAlignment="Center" Margin="0,0,0,8"/>
                <Image Width="20" Stretch="Uniform" Margin="5,5,5,13">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Source" Value="{StaticResource Image.LedOn}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Erector2Connection, ElementName=ViewModel}" Value="False">
                                    <Setter Property="Source" Value="{StaticResource Image.LedOff}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
